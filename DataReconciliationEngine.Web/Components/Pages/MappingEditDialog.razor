@using DataReconciliationEngine.Application.DTOs
@using DataReconciliationEngine.Application.Interfaces
@inject IFieldMappingService MappingService
@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.ListAlt" Class="mr-2" />
            @(MappingId is null ? "New Field Mapping" : "Edit Field Mapping")
        </MudText>
    </TitleContent>
    <DialogContent>
        @if (_loadingEdit)
        {
            <MudProgressLinear Indeterminate="true" Color="Color.Primary" />
        }
        else
        {
            <MudForm @ref="_form" Model="_model" Validation="@(_validator.ValidateValue)">
                <MudGrid Spacing="3">
                    <MudItem xs="12">
                        <MudTextField @bind-Value="_model.LogicalFieldName"
                                      For="@(() => _model.LogicalFieldName)"
                                      Label="Logical Field Name"
                                      Placeholder="e.g. Name, Active, Department"
                                      HelperText="The display name shown in comparison results"
                                      Variant="Variant.Outlined"
                                      Immediate="true" />
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudTextField @bind-Value="_model.SystemA_Column"
                                      For="@(() => _model.SystemA_Column)"
                                      Label="System A Column"
                                      Placeholder="e.g. Roepnaam"
                                      HelperText="Exact column name in System A table"
                                      Variant="Variant.Outlined"
                                      Immediate="true" />
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudTextField @bind-Value="_model.SystemB_Column"
                                      For="@(() => _model.SystemB_Column)"
                                      Label="System B Column"
                                      Placeholder="e.g. CallingName"
                                      HelperText="Exact column name in System B table"
                                      Variant="Variant.Outlined"
                                      Immediate="true" />
                    </MudItem>
                    <MudItem xs="12">
                        <MudSwitch @bind-Value="_model.IsActive"
                                   Label="Active"
                                   Color="Color.Success" />
                    </MudItem>
                </MudGrid>
            </MudForm>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton OnClick="SaveAsync"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   Disabled="_saving">
            @if (_saving)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                @:Saving…
            }
            else
            {
                @:Save
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public int ConfigId { get; set; }

    [Parameter]
    public int? MappingId { get; set; }

    private MudForm _form = null!;
    private FieldMappingEditDto _model = new();
    private readonly DataAnnotationsValidator _validator = new();
    private bool _saving;
    private bool _loadingEdit;

    protected override async Task OnInitializedAsync()
    {
        if (MappingId is not null)
        {
            _loadingEdit = true;
            var existing = await MappingService.GetByIdAsync(MappingId.Value);
            if (existing is not null)
            {
                _model = new FieldMappingEditDto
                {
                    LogicalFieldName = existing.LogicalFieldName,
                    SystemA_Column = existing.SystemA_Column,
                    SystemB_Column = existing.SystemB_Column,
                    IsActive = existing.IsActive
                };
            }
            _loadingEdit = false;
        }
    }

    private void Cancel() => MudDialog.Cancel();

    private async Task SaveAsync()
    {
        await _form.Validate();
        if (!_form.IsValid) return;

        _saving = true;

        try
        {
            if (MappingId is null)
            {
                var result = await MappingService.CreateAsync(ConfigId, _model);
                if (result.IsSuccess)
                {
                    Snackbar.Add($"Mapping \"{_model.LogicalFieldName}\" created.", Severity.Success);
                    MudDialog.Close(DialogResult.Ok(true));
                }
                else
                {
                    Snackbar.Add(result.Error!, Severity.Error);
                }
            }
            else
            {
                var result = await MappingService.UpdateAsync(MappingId.Value, _model);
                if (result.IsSuccess)
                {
                    Snackbar.Add($"Mapping \"{_model.LogicalFieldName}\" updated.", Severity.Success);
                    MudDialog.Close(DialogResult.Ok(true));
                }
                else
                {
                    Snackbar.Add(result.Error!, Severity.Error);
                }
            }
        }
        finally
        {
            _saving = false;
        }
    }

    private sealed class DataAnnotationsValidator
    {
        public Func<object, string, Task<IEnumerable<string>>> ValidateValue =>
            async (model, propertyName) =>
            {
                var context = new System.ComponentModel.DataAnnotations.ValidationContext(model)
                {
                    MemberName = propertyName
                };
                var results = new List<System.ComponentModel.DataAnnotations.ValidationResult>();
                System.ComponentModel.DataAnnotations.Validator.TryValidateProperty(
                    model.GetType().GetProperty(propertyName)?.GetValue(model),
                    context,
                    results);
                return await Task.FromResult(results.Select(r => r.ErrorMessage ?? string.Empty));
            };
    }
}